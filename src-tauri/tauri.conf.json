{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Speaker Tracker",
  "version": "2.1.0",
  "identifier": "5918WarwickMcNaughton.SpeakerTracker",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "",
        "minWidth": 1150,
        "minHeight": 850,
        "theme":"Dark",
        "devtools": true,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "shortDescription": "An app to track speakers in a formal debate."
  }
}
